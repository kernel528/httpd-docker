pipeline:
  ### Build docker image
  docker-publish-httpd:
    when:
      branch: 2.4
      event: push
    image: plugins/docker
    repo: kernel528/httpd
    secrets: [ docker_username, docker_password ]
    dockerfile: Dockerfile
    tag:
      - latest
      - 2.4.59
      - 2.4.59-${DRONE_COMMIT:0:8}-drone-build-${DRONE_BUILD_NUMBER}

# Post notification to orpheus slack channel
  slack:
    when:
      status:
        - success
        - failure
      event:
        - push
        - tag
    image: plugins/slack
    channel: orpheus-alerts
    webhook: https://hooks.slack.com/services/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
    template: >
      Drone build {{uppercase build.status}} for {{ build.link }} with git commit {{ truncate build.commit 8 }} to git branch ({{ build.branch }}) by {{ build.author }}.
